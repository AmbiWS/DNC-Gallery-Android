<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivSetting"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="@dimen/margin_large"
        android:layout_marginStart="360dp"
        android:contentDescription="@string/option_icon"
        app:layout_constraintBottom_toTopOf="@id/settingDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/dnc_logo" />

    <TextView
        android:id="@+id/tvSetting"
        style="@style/BalooRegular.TextHeader22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:text="@string/settings"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ivSetting"
        app:layout_constraintStart_toEndOf="@+id/ivSetting"
        app:layout_constraintTop_toTopOf="@+id/ivSetting" />

    <View
        android:id="@+id/settingDivider"
        style="@style/Divider.Horizontal"
        android:layout_marginHorizontal="@dimen/margin_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
